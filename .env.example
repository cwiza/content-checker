# .env.example - Configuration Template

# GitHub Configuration
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here
GITHUB_OWNER=your-org-or-username
GITHUB_REPO=your-repo-name

# Optional: Custom Dictionary
# Add words separated by commas that should be ignored by spell checker
CUSTOM_DICTIONARY=API,GitHub,TypeScript,OAuth,Kubernetes

# Optional: Validation Rules
# Enable/disable specific validation rules
ENABLE_SPELLING=true
ENABLE_HONORIFICS=true
ENABLE_PLACEHOLDER=true
ENABLE_GRAMMAR=true
ENABLE_CAPITALIZATION=true
ENABLE_INAPPROPRIATE=true

# Optional: Auto-fix Settings
AUTO_FIX_ON_SAVE=false
INTERACTIVE_FIX=true

# Security Note:
# Never commit the actual .env file with real tokens!
# Copy this file to .env and add your actual values
# The .env file is in .gitignore to prevent accidental commits
