{
  "name": "content-checker",
  "displayName": "Content Checker",
  "description": "PR content validation with automatic fixes for spelling and content errors",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "content-checker.validatePR",
        "title": "Content Checker: Validate Pull Request"
      },
      {
        "command": "content-checker.validateAndFixPR",
        "title": "Content Checker: Validate and Auto-fix Pull Request"
      },
      {
        "command": "content-checker.validateFile",
        "title": "Content Checker: Validate Current File"
      },
      {
        "command": "content-checker.previewFixes",
        "title": "Content Checker: Preview Auto-fixes"
      },
      {
        "command": "content-checker.configure",
        "title": "Content Checker: Configure GitHub Settings"
      }
    ],
    "configuration": {
      "title": "Content Checker",
      "properties": {
        "contentChecker.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for API access",
          "scope": "application"
        },
        "contentChecker.githubOwner": {
          "type": "string",
          "default": "",
          "description": "GitHub repository owner/organization"
        },
        "contentChecker.githubRepo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name"
        },
        "contentChecker.customDictionary": {
          "type": "array",
          "default": [],
          "description": "Custom words to ignore in spell checking",
          "items": {
            "type": "string"
          }
        },
        "contentChecker.autoFixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix content issues on save"
        },
        "contentChecker.enabledRules": {
          "type": "array",
          "default": ["spelling", "honorifics", "placeholder", "grammar", "capitalization"],
          "description": "List of enabled validation rules",
          "items": {
            "type": "string",
            "enum": ["spelling", "honorifics", "placeholder", "long-text", "plural-consistency", "capitalization", "grammar", "inappropriate"]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
